{
    "name": "iquety/application",
    "type": "tool",
    "description": "Libraries to create a decoupled application",
    "keywords": ["framework", "application", "mvc", "application controller"],
    "license": "MIT",
    "require": {
        "php": "^8.3.0",
        "psr/container": "^2.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "iquety/console": "dev-main",
        "iquety/prospection": "dev-main"
    },
    "require-dev": {
        "behat/behat": "^3.14",
        "codacy/coverage": "dev-master",
        "guzzlehttp/guzzle": "^7.5",
        "iquety/docmap": "dev-main",
        "iquety/injection": "dev-main",
        "iquety/routing": "dev-main",
        "laminas/laminas-diactoros": "^2.17",
        "nyholm/psr7-server": "^1.0",
        "nyholm/psr7": "^1.5",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/http-foundation": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Iquety\\Application\\": "src/",
            "Modules\\": "tests/project/Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts" : {
        "test:feature": "vendor/bin/behat",
        "test:unit": "vendor/bin/phpunit --testdox",
        "test": [
            "vendor/bin/behat",
            "vendor/bin/phpunit --testdox"
        ],
        "docmap" : [
            "rm -Rf docs/pt-br/*",
            "vendor/bin/docmap -s src/docs/pt-br -d docs/pt-br -r leiame.md -l pt-br",
            "rm -Rf docs/en/*",
            "vendor/bin/docmap -s src/docs/en -d docs/en"
        ],
        "coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": [
            "phpcbf --standard=PSR1,PSR12 src tests",
            "phpcs --standard=PSR1,PSR12 src tests",
            "phpmd ./src ansi cleancode,codesize,unusedcode,naming,design,controversial",
            "phpmd ./tests ansi cleancode,codesize,unusedcode,naming,design,controversial",
            "phpstan analyse --level=8 --xdebug src",
            "phpstan analyse --level=8 --xdebug tests"
        ]
    }
}
